<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:background="@drawable/ic_logout"
        android:contentDescription="@string/logout"
        android:text="" />

    <!-- Header TextView -->
    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/published_recipes"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"/>

    <!-- SearchView for Searching Recipes -->
    <SearchView
        android:id="@+id/searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_below="@id/logoutButton"
        android:queryHint="Search Recipes"
        android:background="@drawable/search_view_background" />

    <!-- No Recipes TextView -->
    <TextView
        android:id="@+id/noRecipesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_published_recipes"
        android:textSize="18sp"
        android:visibility="gone"
        android:layout_below="@id/searchView"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <!-- Back to My Recipes Button -->
    <Button
        android:id="@+id/backToMyRecipesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_my_recipes_button"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:padding="16dp"/>

    <!-- ScrollView containing RecyclerView for Recipes -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchView"
        android:layout_above="@id/backToMyRecipesButton"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Category TextView (optional, if needed for categories) -->
            <TextView
                android:id="@+id/categoryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>

            <!-- RecyclerView for Published Recipes -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/publishedRecipesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryTextView" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
